{
  "name": "neurai-desktop",
  "version": "1.0.0",
  "description": "NeurAI Desktop Application - Complete Setup & Management",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run watch\" \"electron .\"",
    "watch": "webpack --watch --mode development",
    "build:renderer": "webpack --mode production",
    "build": "npm run build:renderer && electron-builder",
    "build:win": "npm run build:renderer && electron-builder --win",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "build:mac:zip": "npm run build:renderer && electron-builder --mac zip",
    "build:mac:dir": "npm run build:renderer && electron-builder --mac dir",
    "build:linux": "npm run build:renderer && electron-builder --linux",
    "build:dir": "npm run build:renderer && electron-builder --dir",
    "icons": "node scripts/generate-icons.js"
  },
  "build": {
    "appId": "com.neurai.desktop",
    "productName": "NeurAI",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "src/main/**/*",
      "src/preload.js",
      "build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "node-pty": "^1.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.6.0",
    "png-to-ico": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.34.5",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "author": "NeurAI",
  "license": "MIT"
}
